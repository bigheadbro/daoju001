#set($layout = "/layout/item_layout.vm")
<div class="payorder-container clearfix">
	<form id="form_purchase" method="post" action="/purchase_handler">
		<input type="hidden" name="itemid" value="$itemid" />
		<input type="hidden" name="itemname" value="$itemName" />
		<input type="hidden" name="price" value="${total}" />
		<input type="hidden" name="quatity" value="${quatity}" />
		<input type="hidden" id="username" name="name"  />
		<input type="hidden" id="useraddress" name="address" />
		<input type="hidden" id="userzip" name="zip" />
		<input type="hidden" id="userphone" name="phone" />
	</form>
	<div class="pay-head">
    	<h1>收银台</h1>
    	<p>
			<em>订单提交成功，请您尽快付款！</em>
			订单号：$!{} | 应付金额：<span>$!{}</span>元
		</p>
    </div>
	<div class="pay-content">
		<ul class="pay-tab clearfix">
            <li class="current">
				支付宝
            </li>
        	<li>
        		 银行转账
            </li>
        </ul>
		<div class="alipay-content">
			<div class="left">
    			<h1>选择支付宝付款</h1>
    			<p>金额：<span>$!{}</span>元</p>
    			<a>下一步</a>
			</div>
			<div class="right clearfix">
				<img src="/img/alipay.png" />
				<div class="alipay">
					<h1>支付宝担保交易</h1>
					<p>刀师傅使用支付宝担保交易服务。<br/>保障买卖双方货款安全，防范欺诈。</p>
				</div>
			</div>
		</div>
		<div class="banktransfer-content">
			
		</div>
	</div>
</div>