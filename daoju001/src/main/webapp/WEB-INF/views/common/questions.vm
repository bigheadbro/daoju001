#set($layout = "/layout/index_layout.vm")
<script type="text/javascript" src="../js/ques-handler.js"></script>
<script type="text/javascript" src="../js/questions.js"></script>
<script type="text/javascript" src="../js/answer.js"></script>
<div class="main-content-container clearfix">
	<!-- 问题 -->
	<div class="main-list-container width630">
		<div class="gc-list-header">
			<h1>所有问题</h1>
			<div class="question-param-wrap">
				<div class="mi question-param clearfix">
					<form  id="form_questions" method="post" action="/questions">
                    <div class="question-param-li process clearfix">
                        #springBind("form.processMethod")
                        <input type="hidden" name="${status.expression}"  value="$!{status.value}" />
                        <a class="sel" >加工方式</a>
                        <ul class="param">
							<li>
                                <a>不限</a>
                            </li>
                            <li>
                                <a>平面铣削</a>
                            </li>
                            <li>
                                <a>侧壁铣削</a>
                            </li>
        					<li>
                                <a>曲面铣削</a>
                            </li>
                            <li>
                                <a>铣槽</a>
                            </li>
        					<li>
                                <a>钻孔</a>
                            </li>
                            <li>
                                <a>镗孔</a>
                            </li>
        					<li>
                                <a>铰孔</a>
                            </li>
                            <li>
                                <a>螺纹铣削</a>
                            </li>
        					<li>
                                <a>车削(粗加工）</a>
                            </li>
                            <li>
                                <a>车削(槽加工）</a>
                            </li>
        					<li>
                                <a>车削(螺纹加工）</a>
                            </li>
                            <li>
                                <a>去毛刺</a>
                            </li>
                        </ul>
                    </div>
                    <div class="question-param-li industry clearfix">
                        #springBind("form.industry")
                        <input type="hidden" name="${status.expression}"  value="$!{status.value}" />
                        <a class="sel" >所属行业</a>
                        <ul class="param">
							<li>
                                <a>不限</a>
                            </li>
                            <li>
                                <a>模具</a>
                            </li>
                            <li>
                                <a>船舶</a>
                            </li>
        					<li>
                                <a>石油设备</a>
                            </li>
        					<li>
                                <a>散热器/空调</a>
                            </li>
        					<li>
                                <a>发电设备</a>
                            </li>
        					<li>
                                <a>塑料机械</a>
                            </li>
        					<li>
                                <a>内燃机</a>
                            </li>
        					<li>
                                <a>大型机械设备</a>
                            </li>
        					<li>
                                <a>汽车零件</a>
                            </li>
        					<li>
                                <a>电子行业</a>
                            </li>
        					<li>
                                <a>通用零件</a>
                            </li>
        					<li>
                                <a>其它</a>
                            </li>
                        </ul>
                    </div>
                    <div class="question-param-li hardness clearfix">
                        #springBind("form.wpHardness")
                        <input type="hidden" name="${status.expression}"  value="$!{status.value}" />
                        <a class="sel" >工件硬度</a>
                        <ul class="param">
							<li>
                                <a>不限</a>
                            </li>
                            <li>
                                <a>HRC20以下</a>
                            </li>
                            <li>
                                <a>HRC20-30</a>
                            </li>
        					<li>
                                <a>HRC30-40</a>
                            </li>
                            <li>
                                <a>HRC40-50</a>
                            </li>
        					<li>
                                <a>HRC50-58</a>
                            </li>
                            <li>
                                <a>HRC58-62</a>
                            </li>
        					<li>
                                <a>HRC62-65</a>
                            </li>
                            <li>
                                <a>HRC65-68</a>
                            </li>
        					<li>
                                <a>HRC68以上</a>
                            </li>
                        </ul>
                    </div>
                    <div class="question-param-li material clearfix">
    					#springBind("form.wpMaterial")
                        <input type="hidden" name="${status.expression}"  value="$!{status.value}" />
                        <a class="sel" >工件材质</a>
                        <ul class="param">
							<li>
                                <a>不限</a>
                            </li>
                            <li>
                                <a>钢</a>
                            </li>
                            <li>
                                <a>铸铁</a>
                            </li>
        					<li>
                                <a>不锈钢</a>
                            </li>
                            <li>
                                <a>高温合金</a>
                            </li>
        					<li>
                                <a>铝</a>
                            </li>
                            <li>
                                <a>有色金属</a>
                            </li>
        					<li>
                                <a>石墨</a>
                            </li>
                            <li>
                                <a>树脂</a>
                            </li>
                        </ul>
					</div>    
					<script>
						$(function(){
							$(".question-param-li input").change(function(){
								$("#form_questions").submit();//提交
								$("#form_questions")[0].reset();
							});
						});
					</script>
					</form>
				</div>
			</div>
		</div>
		<div class="main-list-content">
			#foreach($question in $questions)
			<div class="hot-question-listitem first clearfix">
				<div class="hidden">$!{question.content}</div>
				<div class="logo">
					<a href="/users/$!{question.buyerId}">
						#if($!{question.userLogo})
							<img src="../logo/$!{question.userLogo}" />
						#else
							<img src="../img/avatar.png" />
						#end
					</a>
				</div>
				<div class="content">
					<ul>
						<li class="name"><a href="/users/$!{question.buyerId}">$!{question.userName}</a></li>
						<li class="title clearfix">
							<div class="questions-param">
    							#if($!{question.industry} > 0)
    								<span>$stringUtil.getIndustry($!{question.industry})</span>
    							#end
    							#if($!{question.processMethod} > 0)
    								<span>$stringUtil.getMethod($!{question.processMethod})</span>
    							#end
    							#if($!{question.wpHardness} > 0)
    								<span>$stringUtil.getHardness($!{question.wpHardness})</span>
    							#end
    							#if($!{question.wpMaterial} > 0)
    								<span>$stringUtil.getMaterial($!{question.wpMaterial})</span>
    							#end
    						</div>
							<div class="questions-type">
								#if($!{question.type} == 1)
									<span class="type1">求精</span>
								#elseif($!{question.type} == 2)
									<span class="type2">解难</span>
								#else
									<span class="type3">求新</span>
								#end
							</div>
						</li>
						<li class="text clearfix">
							<p></p>
						</li>
						<li class="info">
							<p>$stringUtil.formatDate($!{question.gmtModify}) <span>|</span> <a href="/questions/$!{question.id}">$!{question.cntPA}个解决方案 <span>|</span> $!{question.cntCA}条评论 <span>|</span> 查看详情</a>  <span class="answer"><a class="solution" qid="$!{question.id}" bid="$!{question.buyerId}">提供专业方案</a></span></p>
						</li>
					</ul>
				</div>
			</div>
			#end
		</div>
		#parse("/common/page.vm")
	</div>
    <!-- 成功案例 -->
	<div class="main-list-container width300 ml50">
		<div class="main-list-header">
			成功案例
		  <a class="seemore" href="/goodcases">查看更多</a>
		</div>
		#foreach($gc in $goodcases)
		<div class="goodcase-listitem clearfix">
			<div class="name">
				<a target="_blank" href="/downloadgc?file=$!{gc.link}">$!{gc.name}</a>
			</div>
			<div class="property">
				#if($!{gc.industry} > 0)
					<span>$stringUtil.getIndustry($!{gc.industry})</span>
				#end
				#if($!{gc.processMethod} > 0)
					<span>$stringUtil.getMethod($!{gc.processMethod})</span>
				#end
				#if($!{gc.workMaterial} > 0)
					<span>$stringUtil.getMaterial($!{gc.workMaterial})</span>
				#end
				#if($!{gc.workSolidity} > 0)
					<span>$stringUtil.getHardness($!{gc.workSolidity})</span>
				#end
			</div>
		</div>
		#end
	</div>
</div>
#parse("/common/answer.vm")