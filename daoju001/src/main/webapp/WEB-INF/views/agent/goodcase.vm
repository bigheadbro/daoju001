#set($layout = "/layout/agent_detail_layout.vm")
<script>
$(function() {
	$(".del").click(function()
    {
		var str = "/agent/delgc/" + $(this).attr("gid");
    	if(confirm("确定要删除吗？")){
			$.ajax( {   
    		    type : "POST",   
    		    url : str,
				success: function(){
					window.location.href='/agent/goodcase';
				}
    		});   
        }
    });
});
</script>
<ul class="right-tab clearfix">
  <li><a href="uploadgc">上传案例</a></li>
  <li class="current"><span>案例管理</span></li>
</ul>
<div class="rigth-content">
	<div class="buyer-list">
		#foreach($gc in $goodcases)
    		<div class="listitem">
    			<p>$!{gc.name}<span>$stringUtil.formatDate($!{gc.gmtCreate})</span></p>
    			<div class="operation clearfix">
    				<a href="/agent/gc/$!{gc.id}">编辑</a><span>|</span>
    				<a class="del" gid="$!{gc.id}">删除</a>
    			</div>
    		</div>
		#end
	</div>
	#parse("/common/page.vm")
</div>
