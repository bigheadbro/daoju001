#set($layout = "/layout/item_layout.vm")
<link rel="stylesheet" href="/css/flexslider.css">
<script type="text/javascript" src="/js/jquery.flexslider-min.js"></script>
<script>
$(function() {
	$('.flexslider').flexslider({
		slideshow: false,
        animation: "fade",
		controlNav: false
    });
	$("ul.series-tab li").click(function(){
		$("ul.series-tab li").each(function(){
			$(this).removeClass("current");
		});
		$(this).addClass("current");
		if($(this).attr("alipay") == 1)
		{
			$(".version-content").show();
			$(".category-content").hide();
		}
		else
		{
			$(".version-content").hide();
			$(".category-content").show();
		}
	});
});
</script>
<div class="main-content-wrap clearfix">
	<h3>
		$ctConfig.getCategoryHtml(${ct.code},true)
	</h3>
	<div class="content clearfix" style="margin-bottom:10px;margin-top:20px;">
		<div style="float:left;">
			#if($stringUtil.isNotEmpty(${ct.cover}))
				<a style="width:130px;display: block;text-align: center;border:1px solid grey"><img src="$!{ct.cover}" /></a>
			#else
				<a style="width:130px;display: block;text-align: center;border:1px solid grey"><img src="/img/series/nopic.gif" /></a>
			#end
		</div>
		<div style="float:left;width: 700px;margin-left:10px;">
			<h3>$!{ct.seriesname}</h3>
			<h4>$!{ct.brand}</h4>
    		<p >$!{ct.outline}</p>
    		<p >$!{ct.info}</p>
		</div>
    </div>
	<div class="series-content">
		<ul class="series-tab clearfix">
            <li alipay=1 class="current">
				型号
            </li>
        	<li>
        		 产品目录
            </li>
        </ul>
		<div class="version-content clearfix">
			<div class="content">
			#foreach($cut in $cts)
				#if($velocityCount == 1)
					<div class="head">
						$ctConfig.getParamsHtml($cts)
					</div>
					<div class="content">
						#parse("/common/params.vm")
					</div>
				#else
					<div class="content">
						#parse("/common/params.vm")
					</div>
				#end
			#end
			</div>
		</div>
		<div class="category-content" style="width:700px;">
			#if($!ctConfig.getCategoryPic($!{ct.pic}))
			<div class="flexslider">
    			<ul class="slides">
    				$ctConfig.getCategoryPic($!{ct.pic})
    			</ul>
            </div>
			#else
				无目录图片
			#end
		</div>
	</div>
</div>