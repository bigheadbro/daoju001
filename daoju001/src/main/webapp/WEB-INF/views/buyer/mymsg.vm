#set($layout = "/layout/buyer_detail_layout.vm")
<h2>全部消息</h2>
<div class="rigth-content">
    <div class="buyer-list">
        #foreach($msg in $msgs)
			#if($!{msg.hasRead})
				<div class="listitem clearfix">
			#else
				<div class="listitem notread clearfix">
			#end
                
				#if($!{msg.type} == 1)	
					<a href="/agents/$!{msg.senderId}">$!{msg.senderName}</a>
				#elseif($!{msg.type} == 2)
					<a href="/agents/$!{msg.senderId}">$!{msg.senderName}</a>
				#elseif($!{msg.type} == 3)
					<a href="/buyer/$!{msg.senderId}">$!{msg.senderName}</a>
				#else
					系统信息,
				#end
				#if($!{msg.type} == 1)	
					提供了解决方案,
				#elseif($!{msg.type} == 2)
					回复了你,
				#elseif($!{msg.type} == 3)
					回复了你,
				#else
					系统信息,
				#end
				<a href="/questions/$!{msg.questionId}">查看详情</a>
                <span>$stringUtil.formatDate($!{msg.gmtCreate})</span>
            </div>
        #end
    </div>
</div>
